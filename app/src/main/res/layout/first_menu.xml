<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="135dp"
        android:layout_marginRight="90dp"
        android:scaleType="center"
        app:srcCompat="@drawable/backcolor"
        android:alpha="0.4"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstmenuuser"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/mybuttonwhite"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="회원 이름: "
            app:layout_constraintBottom_toTopOf="@+id/firstmenucount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/firstmenucount"
            android:layout_width="195dp"
            android:layout_height="40dp"
            android:layout_below="@+id/firstmenuuser"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/mybuttonwhite"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="회원 이름: "
            app:layout_constraintBottom_toTopOf="@+id/search_bookname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/search_bookname"
            android:layout_width="195dp"
            android:layout_height="56dp"
            android:layout_below="@+id/firstmenucount"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="110dp"
            android:background="@drawable/mybutton"
            android:text="도서 검색하기"
            app:layout_constraintBottom_toTopOf="@+id/borrow_direct"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/borrow_direct"
            android:layout_width="195dp"
            android:layout_height="56dp"
            android:layout_below="@+id/search_bookname"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="280dp"
            android:background="@drawable/mybutton"
            android:text="도서 대출하기"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>

</RelativeLayout>